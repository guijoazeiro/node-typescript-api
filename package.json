{
  "name": "ts-api",
  "version": "1.0.0",
  "description": "Typescript NodeJS API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "start:local": "ts-node-dev --transpile-only src/index.ts  | pino-pretty -c",
    "test": "yarn style:check && yarn test:unit && yarn test:functional",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test:functional": "jest --projects ./test --forceExit --runInBand",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts",
    "test:unit": "jest"
  },
  "author": "Guilherme Joazeiro",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "^0.0.40",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "@types/express-rate-limit": "^6.0.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/module-alias": "^2.0.1",
    "@types/moment": "^2.13.0",
    "@types/multer": "^1.4.7",
    "@types/nock": "^11.1.0",
    "@types/node": "13.13.2",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "jest": "^27.3.1",
    "nock": "^13.2.1",
    "pino-pretty": "^7.4.0",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@types/bcrypt": "^5.0.0",
    "@types/lodash": "^4.14.178",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-openapi-validator": "3.16.1",
    "express-pino-logger": "^7.0.0",
    "express-rate-limit": "^6.2.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mongoose": "^6.1.2",
    "pino": "^7.6.3",
    "swagger-ui-express": "^4.3.0"
  }
}
